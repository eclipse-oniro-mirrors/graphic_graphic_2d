import("//build/config/features.gni")
import("//build/test.gni")
import("//foundation/graphic/graphic_2d/graphic_config.gni")
module_output_path = "graphic_2d/graphic_2d"

##############################fuzztest##########################################
ohos_fuzztest("EGLWrapperObjectFuzzTest") {
  fuzz_config_file = "//foundation/graphic/graphic_2d/frameworks/opengl_wrapper/test/fuzztest/eglwrapperobject_fuzzer"
  module_out_path = module_output_path

  include_dirs = [
    "//foundation/graphic/graphic_2d/frameworks/opengl_wrapper/src/EGL",
    "$drivers_display_interface/include",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "eglwrapperobject_fuzzer.cpp" ]
  deps = [ "$graphic_2d_root/frameworks/opengl_wrapper:EGL" ]
  external_deps = [ "c_utils:utils" ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":EGLWrapperObjectFuzzTest",
  ]
}
