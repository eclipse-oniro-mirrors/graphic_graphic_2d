#####################hydra-fuzz###################
import("//build/config/features.gni")
import("//build/test.gni")
import("//foundation/graphic/graphic_2d/graphic_config.gni")
import("$graphic_2d_root/text/config.gni")
module_out_path = "graphic_2d/graphic_2d/text"

##############################fuzztest##########################################
ohos_fuzztest("HmSymbolRunFuzzTest") {
  module_out_path = module_out_path
  fuzz_config_file = "."

  include_dirs = [
    "$rosen_text_root/interface/export",
    "$rosen_text_root/interface/export/rosen_test",
    "$rosen_text_root/adapter/skia",
    "$rosen_text_root/adapter/skia/txt",
    "../",
  ]

  if (use_skia_txt) {
    sources = [
      "get_object.h",
      "hm_symbol_run_fuzzer.cpp",
    ]
  }

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  deps = [ "$graphic_2d_root/rosen/modules/2d_graphics:2d_graphics" ]

  part_name = "graphic_2d"
  subsystem_name = "graphic"
}

###############################################################################
group("fuzztest") {
  testonly = true

  deps = [ ":HmSymbolRunFuzzTest" ]
}
