import("//build/test.gni")
import("//foundation/graphic/graphic_2d/graphic_config.gni")
import("$graphic_2d_root/text/config.gni")

module_out_path = "graphic_2d/graphic_2d/text"

ohos_unittest("rosen_text_adapt_test") {
  module_out_path = module_out_path

  if (use_skia_txt) {
    sources = [
      "convert_test.cpp",
      "font_collection_test.cpp",
      "run_test.cpp",
      "text_line_base_test.cpp",
      "typography_create_test.cpp",
      "typography_relayout_test.cpp",
      "typography_test.cpp",
    ]
  }
  include_dirs = [
    "$rosen_text_root",
    "$rosen_text_root/service/skia_txt",
    "$rosen_text_root/interface/export",
    "$rosen_text_root/interface/export/rosen_text",
    "$rosen_text_root/adapter/skia",
    "$rosen_text_root/adapter/skia/txt",
    "$rosen_root/modules/render_service_base/include",
  ]

  cflags = [
    "-std=c++17",
    "-Dprivate=public",
    "-Dprotected=public",
  ]

  defines = []

  platform = current_os
  if (platform == "mingw") {
    platform = "windows"
  }
  if (platform == "ohos" || platform == "ohos_ng") {
    defines += [ "OHOS_TEXT_ENABLE" ]
  }

  if (defined(use_rosen_drawing) && use_rosen_drawing) {
    defines += [
      "USE_ROSEN_DRAWING",
      "USE_SKIA_TXT",
    ]
    if (rs_enable_gpu) {
      defines += [ "RS_ENABLE_GPU" ]
    }
  }

  #defines += [ "OHOS_STANDARD_SYSTEM" ]
  deps = [
    "$rosen_root/modules/2d_graphics:2d_graphics",
    "$rosen_text_root/adapter/skia:skia_libtxt_$platform",
  ]

  external_deps = [
    "bundle_framework:appexecfwk_base",
    "bundle_framework:appexecfwk_core",
    "c_utils:utils",
    "googletest:gtest_main",
    "hilog:libhilog",
  ]

  part_name = "graphic_2d"
  subsystem_name = "graphic"
}

group("unittest") {
  testonly = true

  deps = [ ":rosen_text_adapt_test" ]
}
