import("//build/test.gni")
import("//foundation/graphic/graphic_2d/graphic_config.gni")
import("$graphic_2d_root/rosen/modules/2d_engine/rosen_text/config.gni")

module_output_path =
    "graphic_2d/graphic_2d/rosen/modules/2d_engine/rosen_text/adapter/global_config"

ohos_unittest("rosen_text_global_test") {
  module_out_path = module_output_path

  sources = [ "text_global_config_test.cpp" ]
  include_dirs = [
    "$rosen_2d_engine_root",
    "$rosen_2d_engine_root/rosen_text/adapter/global_config",
    "$graphic_2d_root/rosen/modules/2d_graphics/include",
  ]

  cflags = [
    "-std=c++17",
    "-Dprivate=public",
  ]

  defines = ["OHOS_TEXT_ENABLE"]
  deps = [
    "$rosen_root/modules/2d_graphics:2d_graphics",
  ]
  external_deps = [
    "hilog:libhilog",
  ]

  part_name = "graphic_2d"
  subsystem_name = "graphic"
}

group("unittest") {
  testonly = true

  deps = [ ":rosen_text_global_test" ]
}