import("//build/test.gni")
import("//foundation/graphic/graphic_2d/graphic_config.gni")

ohos_unittest("string_convert_test") {
  module_out_path = "graphic_2d/graphic_2d/text"
  sources = [ "string_util_test.cpp" ]

  cflags_cc = [
    "-std=c++17",
    "-Dprivate=public",
    "-Dprotected=public",
  ]

  include_dirs = [
    "$graphic_2d_root/rosen/modules/2d_engine/rosen_text/skia_txt",
    "$graphic_2d_root/rosen/modules/2d_engine/rosen_text/export/rosen_text",
  ]

  deps = [ "$graphic_2d_root/rosen/modules/2d_graphics:2d_graphics" ]

  part_name = "graphic_2d"
  subsystem_name = "graphic"
}

group("unittest") {
  testonly = true

  deps = [ ":string_convert_test" ]
}
