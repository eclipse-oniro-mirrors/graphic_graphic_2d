import("//build/test.gni")
import("//foundation/graphic/graphic_2d/graphic_config.gni")
import("$graphic_2d_root/rosen/modules/2d_engine/rosen_text/config.gni")

module_output_path =
    "graphic_2d/graphic_2d/rosen/modules/2d_engine/rosen_text/symbol_resource"

ohos_unittest("symbol_resource_test") {
  module_out_path = module_output_path
  if (use_skia_txt) {
    sources = [ "symbol_config_parser_test.cpp" ]
  }
  include_dirs = [
    "$rosen_2d_engine_root",
    "$rosen_2d_engine_root/rosen_text/adapter/skia_txt",
    "$rosen_2d_engine_root/rosen_text/export",
    "$rosen_2d_engine_root/rosen_text/export/rosen_text",
    "$rosen_2d_engine_root/rosen_text/skia_txt",
    "$rosen_root/modules/2d_engine/rosen_text/skia_txt/txt",
  ]

  defines = [
    "USE_GRAPHIC_TEXT_GINE",
    "WINDOWS_PLATFORM",
  ]
  cflags = [
    "-Dprivate=public",
    "-std=c++17",
  ]

  platform = current_os
  if (platform == "mingw") {
    platform = "windows"
  }

  defines += [
    "USE_ROSEN_DRAWING",
    "USE_SKIA_TXT",
  ]

  deps = [ "$rosen_root/modules/2d_graphics:2d_graphics" ]

  external_deps = [
    "googletest:gtest_main",
    "hilog:libhilog",
    "jsoncpp:jsoncpp",
    "skia:skia_canvaskit",
  ]

  part_name = "graphic_2d"
  subsystem_name = "graphic"
}

group("unittest") {
  testonly = true

  deps = [ ":symbol_resource_test" ]
}
