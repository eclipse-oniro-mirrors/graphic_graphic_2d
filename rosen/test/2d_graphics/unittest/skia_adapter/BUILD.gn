  ]
  deps += [ "//third_party/skia:skia_ohos" ]

  if (ace_enable_gpu) {
    defines = [ "ACE_ENABLE_GPU" ]
  }

  part_name = "graphic_2d"
  subsystem_name = "graphic"
}

group("unittest") {
  testonly = true

  deps = [ ":2d_graphics_skia_canvas_test" ]
}
