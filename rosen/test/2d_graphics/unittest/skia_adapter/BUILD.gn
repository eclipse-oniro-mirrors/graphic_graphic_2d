ohos_unittest("2d_graphics_skia_canvas_test") {
  module_out_path = module_output_path

  sources = [
    "../../../../modules/2d_graphics/src/drawing/engine_adapter/skia_adapter/skia_mask_filter.cpp",
    "../../../../modules/2d_graphics/src/drawing/engine_adapter/skia_adapter/skia_picture.cpp",
