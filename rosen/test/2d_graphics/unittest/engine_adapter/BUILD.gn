import("//build/test.gni")
import("//foundation/graphic/graphic_2d/graphic_config.gni")

module_output_path = "graphic_2d/rosen/modules/2d_graphics/engine_adapter"

ohos_unittest("2d_graphics_engine_adapter_test") {
  module_out_path = module_output_path

  sources = [ "static_factory_test.cpp" ]

  include_dirs = [ "//third_party/googletest/googletest/include" ]

  deps = [ "//third_party/googletest:gtest_main" ]

  defines = [ "ROSEN_OHOS" ]
  if (rs_enable_gpu) {
    defines += [ "RS_ENABLE_GPU" ]
  }
  defines += gpu_defines

  external_deps = [
    "c_utils:utils",
    "graphic_2d:2d_graphics",
    "graphic_2d:librender_service_base",
    "hilog:libhilog",
    "init:libbegetutil",
  ]

  part_name = "graphic_2d"
  subsystem_name = "graphic"
}

group("unittest") {
  testonly = true

  deps = [ ":2d_graphics_engine_adapter_test" ]
}
