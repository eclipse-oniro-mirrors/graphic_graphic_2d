import("//build/test.gni")
import("//foundation/graphic/graphic_2d/graphic_config.gni")

module_output_path = "graphic_2d/rosen/modules/2d_graphics/bitmap"

ohos_unittest("2d_graphics_bitmap_test") {
  module_out_path = module_output_path

  sources = [ "bitmap_test.cpp" ]

  include_dirs = [
    "$graphic_2d_root/rosen/modules/2d_graphics/include",
    "$graphic_2d_root/rosen/modules/2d_graphics/src",
    "//third_party/googletest/googletest/include",
  ]

  deps = [
    "$graphic_2d_root:libgl",
    "$graphic_2d_root/rosen/modules/2d_graphics:2d_graphics",
    "//third_party/googletest:gtest_main",
  ]

  defines = [ "ROSEN_OHOS" ]
  if (ace_enable_gpu) {
    defines += [ "ACE_ENABLE_GPU" ]
  }

  subsystem_name = "graphic"
  external_deps = [
    "c_utils:utils",
    "graphic_2d:librender_service_base",
    "hilog:libhilog",
    "image_framework:image_native",
  ]
}

group("unittest") {
  testonly = true

  deps = [ ":2d_graphics_bitmap_test" ]
}
