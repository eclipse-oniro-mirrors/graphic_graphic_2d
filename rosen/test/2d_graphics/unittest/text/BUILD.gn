import("//build/test.gni")
import("//foundation/graphic/graphic_2d/graphic_config.gni")

module_output_path = "graphic_2d/rosen/modules/2d_graphics/text"

ohos_unittest("2d_graphics_text_test") {
  module_out_path = module_output_path

  cflags = [
    "-Dprivate=public",
    "-Dprotected=public",
  ]

  sources = [
    "font_mgr_test.cpp",
    "skfontmgr_test.cpp",
    "typeface_test.cpp",
  ]

  include_dirs = [ "//third_party/googletest/googletest/include" ]

  deps = [ "//third_party/googletest:gtest_main" ]

  external_deps = [
    "c_utils:utils",
    "graphic_2d:2d_graphics",
    "hilog:libhilog",
    "skia:skia_canvaskit",
  ]

  part_name = "graphic_2d"
  subsystem_name = "graphic"
}

group("unittest") {
  testonly = true

  deps = [ ":2d_graphics_text_test" ]
}
