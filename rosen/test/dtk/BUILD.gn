import("//build/ohos.gni")
import("//foundation/graphic/graphic_2d/graphic_config.gni")

ohos_executable("dtk") {
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }
  defines = []
  include_dirs = [
    "$graphic_2d_root/rosen/modules/2d_graphics/src/drawing/engine_adapter",
    "$graphic_2d_root/rosen/test/dtk",
  ]
  # function demo
  sources = [
    "dtk.cpp",
    "dtk_test_base.cpp",
    "dtk_test_register.cpp",
    "dtk_test_utils.cpp",
    "function/font/dtk_font_fontstyleset_test.cpp",
    "utils.cpp",
  ]
  # performance demo
  sources += [
  ]

  deps = [
    "$graphic_2d_root/graphic_2d/rosen/modules/2d_graphics:2d_graphics",
    "$graphic_2d_root/graphic_2d/rosen/modules/render_service_base:librender_service_base",
  ]
  deps += [
    "$graphic_2d_root/graphic_2d/rosen/modules/render_service_client:librender_service_client",
  ]

  include_dirs += [
    "$graphic_2d_root/graphic_2d/rosen/modules/render_service_base/src",
  ]
  if (defined(use_rosen_drawing) && use_rosen_drawing) {
    defines += [ "USE_ROSEN_DRAWING" ]
  }

  if (ace_enable_gpu) {
    defines += [ "ACE_ENABLE_GPU" ]
  }

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
    "init:libbegetutil",
    "image_framework:image_native",
    "safwk:system_ability_fwk",
    "skia:skia_canvaskit",
    "zlib:libz",
    "vulkan-headers:vulkan_headers",
    "vulkan-loader:vulkan_loader",
    "window_manager:libdm",
    "window_manager:libwms",
    "window_manager:libwm",
    "hitrace:hitrace_meter",
  ]

  public_deps = [
    "$graphic_2d_root/frameworks/opengl_wrapper:EGL",
    "$graphic_2d_root/frameworks/opengl_wrapper:GLESv3",
  ]

  part_name = "graphic_2d"
  subsystem_name = "graphic"
}