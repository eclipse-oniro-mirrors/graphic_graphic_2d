module_output_path = "graphic_2d/graphic_2d"

##############################fuzztest##########################################
ohos_fuzztest("RSSurfaceOhosFuzzTest") {
  if (defined(use_rosen_drawing) && use_rosen_drawing) {
    defines = [ "USE_ROSEN_DRAWING" ]
  }
  module_out_path = module_output_path
  fuzz_config_file = "../rssurfaceohos_fuzzer"
  include_dirs = [
    "../../../../../modules/2d_graphics/src",
    "../../../../../modules/render_service_base/src",
    "../../../../../modules/2d_graphics/include",
  ]
  deps = [ "../../../../../modules/render_service_base:librender_service_base" ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "rssurfaceohos_fuzzer.cpp" ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
  ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":RSSurfaceOhosFuzzTest",
  ]
}
