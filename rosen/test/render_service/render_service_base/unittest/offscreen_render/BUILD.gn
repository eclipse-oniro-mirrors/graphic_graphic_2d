import("//build/test.gni")
import("//foundation/graphic/graphic_2d/ace_platforms.gni")

module_output_path =
    "graphic_2d/graphic_2d/render_service_base/offscreen_render"

##############################  RSRenderServiceBaseOffscreenRenderTest  ##################################
ohos_unittest("RSRenderServiceBaseOffscreenRenderTest") {
  module_out_path = module_output_path

  sources = [ "rs_offscreen_render_thread_test.cpp" ]

  cflags = [
    "-Wall",
    "-Werror",
    "-g3",
    "-Dprivate=public",
    "-Dprotected=public",
  ]

  configs = [
    ":render_test",
    "../../../../../modules/render_service_base:export_config",
  ]

  include_dirs = [
    "../../../../../modules/render_service_base/include",
    "../../../../../include",
    "../../../../../test/include",
  ]

  deps = [
    "../../../../../modules/render_service_base:librender_service_base",
    "../../../../../modules/render_service_base:render_service_base_src",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "c_utils:utils",
    "graphic_surface:surface",
    "image_framework:image_native",
    "init:libbegetutil",
    "skia:skia_canvaskit",
  ]

  subsystem_name = "graphic"
}

###############################################################################
config("render_test") {
  visibility = [ ":*" ]
  include_dirs = [
    "$ace_root",
    "../../../../../modules/render_service_base",
  ]
}

group("unittest") {
  testonly = true

  deps = [ ":RSRenderServiceBaseOffscreenRenderTest" ]
}
