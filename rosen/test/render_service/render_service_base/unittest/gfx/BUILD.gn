import("//build/test.gni")
import("//foundation/graphic/graphic_2d/ace_platforms.gni")
import("//foundation/graphic/graphic_2d/graphic_config.gni")

module_output_path = "graphic_2d/graphic_2d/render_service_base/gfx"

##############################  RSRenderServiceBaseGfxTest  ##################################
ohos_unittest("RSRenderServiceBaseGfxTest") {
  module_out_path = module_output_path

  sources = [
    "dump/rs_dump_manager_test.cpp",
    "fps_info/rs_surface_fps_manager_test.cpp",
    "fps_info/rs_surface_fps_test.cpp",
  ]

  configs = [
    ":render_test",
    "$graphic_2d_root/rosen/modules/render_service_base:export_config",
  ]

  deps = [ "../../../../../modules/render_service_base:librender_service_base" ]

  cflags = [ "-Dprivate=public" ]

  include_dirs =
      [ "$graphic_2d_root/rosen/modules/render_service_base/include" ]

  subsystem_name = "graphic"
}

###############################################################################
config("render_test") {
  visibility = [ ":*" ]
  include_dirs = [ "$graphic_2d_root/rosen/modules/render_service_base" ]
}

group("unittest") {
  testonly = true
  deps = [ ":RSRenderServiceBaseGfxTest" ]
}
