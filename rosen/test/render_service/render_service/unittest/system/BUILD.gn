import("//build/test.gni")
import("//foundation/graphic/graphic_2d/graphic_config.gni")

module_output_path = "graphic/rosen_engine/render_service/system"

group("unittest") {
  testonly = true
  deps = [ ":RSSystemParametersTest" ]
}

## Build RSSystemParametersTest
ohos_unittest("RSSystemParametersTest") {
  module_out_path = module_output_path
  sources = [ "rs_system_parameters_test.cpp" ]
  include_dirs = [
    "./../../../../../modules/render_service/core",
    "./../../../../../modules/render_service_base/include",
    "$graphic_surface_root/interfaces/inner_api/surface",
    "$graphic_surface_root/interfaces/inner_api/common",
  ]

  deps = [
    "./../../../../../modules/render_service:librender_service",
    "./../../../../../modules/render_service_base:librender_service_base",
    "//third_party/googletest:gtest_main",
  ]
  defines = []
  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
    "init:libbegetutil",
  ]
  defines += gpu_defines

  cflags = [
    "-Wall",
    "-Werror",
    "-g3",
    "-Dprivate=public",
    "-Dprotected=public",
  ]
  subsystem_name = "graphic"
  part_name = "graphic_2d"
}
