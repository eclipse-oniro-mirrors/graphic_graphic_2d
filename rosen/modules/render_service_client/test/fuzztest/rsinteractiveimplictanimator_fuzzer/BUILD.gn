import("//build/config/features.gni")
import("//build/test.gni")
import("//foundation/graphic/graphic_2d/graphic_config.gni")
module_output_path = "graphic_2d/graphic_2d"

##############################fuzztest##########################################
ohos_fuzztest("RSInteractiveImplictAnimatorFuzzTest") {
  fuzz_config_file = "$graphic_2d_root/rosen/modules/render_service_client/test/fuzztest/rsinteractiveimplictanimator_fuzzer"
  module_out_path = module_output_path

  include_dirs = [
    "$graphic_2d_root/rosen/modules/render_service_client/core/animation",
    "$graphic_2d_root/rosen/modules/render_service_base/include/animation",
    "$graphic_2d_root/rosen/modules/render_service_base/include/render",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-Dprivate=public",
    "-Dprotected=public",
  ]
  sources = [ "rsinteractiveimplictanimator_fuzzer.cpp" ]
  deps = [
    "$graphic_2d_root/rosen/modules/render_service_base:librender_service_base",
    "$graphic_2d_root/rosen/modules/render_service_client:librender_service_client",
  ]

  external_deps = [
    "c_utils:utils",
    "graphic_surface:surface",
    "hilog:libhilog",
  ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":RSInteractiveImplictAnimatorFuzzTest",
  ]
}
