    "-Werror",
    "-g3",
  ]
}

config("cpudraw_public_config") {
  include_dirs = [ "export" ]
}

ohos_static_library("cpudraw") {
  branch_protector_ret = "pac_ret"

  sources = [ "src/cpudraw.cpp" ]

  configs = [ ":cpudraw_config" ]

  public_configs = [ ":cpudraw_public_config" ]

  deps = [ "..:scoped_bytrace" ]
